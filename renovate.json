{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "ignorePaths": [
    "projects/ngx-pwa/local-storage/package.json"
  ],
  "packageRules": [
    {
      "packageNames": ["typescript"],
      "allowedVersions": "<4.7"
    },
    {
      "packageNames": ["tslib"],
      "allowedVersions": "<2.4"
    },
    {
      "packageNames": ["zone.js"],
      "allowedVersions": "<0.12"
    },
    {
      "packageNames": ["@types/node"],
      "allowedVersions": "<17"
    },
    {
      "packageNames": ["rxjs"],
      "allowedVersions": "<8"
    }
  ],
  "schedule": ["after 1am and before 7am on friday"],
  "timezone": "Europe/Paris",
  "prHourlyLimit": 0,
  "dependencyDashboard": false
}
